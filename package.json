{
    "name": "field-hero-admin-server",
    "version": "1.0.0",
    "description": "Node+Express+typescript based server for the Field Hero Admin Portal.",
    "main": "dist/src/index.js",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist/",
        "dev": "nodemon -L",
        "lint": "eslint . --ext .ts",
        "prebuild": "npm run clean && npm run lint",
        "prisma:deploy": "prisma migrate deploy",
        "start": "node -r dotenv/config .",
        "test": "jest --setupFiles dotenv/config",
        "watch": "node -r dotenv/config -r ts-node/register src/index.ts dotenv_config_path=.env.development"
    },
    "keywords": [
        "express",
        "typescript"
    ],
    "dependencies": {
        "@prisma/client": "^2.22.0",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^8.4.0",
        "express": "^4.17.1",
        "generate-password": "^1.6.0",
        "helmet": "^4.6.0",
        "jsonwebtoken": "^8.5.1",
        "jw-paginate": "^1.0.4",
        "mjml": "^4.9.0",
        "moment": "^2.29.1",
        "multer": "^1.4.2",
        "nodemailer": "^6.6.0",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pino": "^6.11.0",
        "pino-http": "^5.3.0",
        "pino-pretty": "^4.3.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.1",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.11",
        "@types/helmet": "0.0.48",
        "@types/jest": "^26.0.21",
        "@types/mjml": "^4.7.0",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.14.22",
        "@types/nodemailer": "^6.4.1",
        "@types/passport": "^1.0.6",
        "@types/passport-jwt": "^3.0.5",
        "@types/passport-local": "^1.0.33",
        "@types/pino": "^6.3.5",
        "@types/pino-http": "^5.0.6",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "eslint": "^7.18.0",
        "jest": "^26.6.3",
        "newman": "^5.2.2",
        "nodemon": "^2.0.7",
        "prisma": "^2.22.0",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    }
}
