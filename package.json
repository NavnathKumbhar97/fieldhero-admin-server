    "express-joi-validator": "^2.0.1",
    "fs": "0.0.1-security",
    "generate-password": "^1.6.0",
    "helmet": "^4.4.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "jw-paginate": "^1.0.4",
    "mariadb": "^2.5.2",
    "mjml": "^4.8.1",
    "moment": "^2.29.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
