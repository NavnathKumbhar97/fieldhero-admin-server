{
    "name": "field-hero-admin-server",
    "version": "1.0.0",
    "description": "Node+Express+typescript based server for the Field Hero Admin Portal.",
    "main": "dist/src/index.js",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist/",
        "debug": "node -r ts-node/register src/scripts/debug.ts",
        "dev": "nodemon -L",
        "lint": "eslint . --ext .ts",
        "prebuild": "npm run clean && npm run lint",
        "prisma:deploy": "prisma migrate deploy",
        "start": "node -r dotenv/config .",
        "test": "jest --setupFiles dotenv/config",
        "tsnode": "node -r ts-node/register",
        "ts-node": "ts-node --compiler-options {\\\"module\\\":\\\"commonjs\\\"}",
        "watch": "node -r dotenv/config -r ts-node/register src/index.ts dotenv_config_path=.env.development"
    },
    "keywords": [
        "express",
        "typescript"
    ],
    "dependencies": {
        "@prisma/client": "^2.30.2",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-validator": "^7.0.1",
        "generate-password": "^1.6.1",
        "helmet": "^4.6.0",
        "jsonwebtoken": "^8.5.1",
        "jw-paginate": "^1.0.4",
        "mjml": "^4.10.2",
        "moment": "^2.29.1",
        "multer": "^1.4.4",
        "nodemailer": "^6.6.3",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pino": "^6.13.1",
        "pino-http": "^5.3.0",
        "pino-pretty": "^6.0.0",
        "winston": "^3.8.2",
        "winston-mongodb": "^5.1.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.21",
        "@types/mjml": "^4.7.0",
        "@types/multer": "^1.4.7",
        "@types/node": "^14.17.14",
        "@types/nodemailer": "^6.4.4",
        "@types/passport": "^1.0.7",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/pino": "^6.3.11",
        "@types/pino-http": "^5.0.6",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "chalk": "^4.1.2",
        "enquirer": "^2.3.6",
        "eslint": "^7.18.0",
        "jest": "^26.6.3",
        "json-2-csv": "^3.14.1",
        "newman": "^5.2.4",
        "nodemon": "^2.0.7",
        "prisma": "^2.30.2",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.2"
    }
}
